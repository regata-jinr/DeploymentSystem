{
  "Settings": {
    "SquirrelPath": ".nuget/packages/squirrel.windows/1.9.1/tools/Squirrel.exe",
    "SquirrelArgs": "--no-msi --no-delta"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogFile": "C:/temp/RegataUpdateManager-nlog-internal.log",
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/RegataUpdateManagerLogs/${shortdate}.log",
        "layout": "${longdate}--${uppercase:${level}}--${callsite}--${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "${gdc:item=VerboseMode}",
        "writeTo": "logfile"
      }
    ]
  }
}